{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Current File",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": [
              "${relativeFile}",
              "--verbose"
            ],
            "disableOptimisticBPs": true,
            "console": "integratedTerminal",
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
          }
    ]
}